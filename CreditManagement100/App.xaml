<?xml version="1.0" encoding="utf-8"?>
<Application
    x:Class="CreditManagement100.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CreditManagement100"
    xmlns:converters="using:CreditManagement100.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <!-- Other resource dictionaries -->
                <ResourceDictionary Source="/Styles/Colors.xaml"/>
                <ResourceDictionary Source="/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <converters:BoolToColorBrushConverter x:Key="BoolToColorBrushConverter" />
            <converters:BoolToFontWeightConverter x:Key="BoolToFontWeightConverter" />
            
            <!-- Other app resources -->
        </ResourceDictionary>
    </Application.Resources>
</Application>
