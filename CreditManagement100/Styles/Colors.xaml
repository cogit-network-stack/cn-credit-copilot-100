<?xml version="1.0" encoding="utf-8"?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Brand Colors -->
    <Color x:Key="ColorPrimary">#1B2F52</Color>
    <Color x:Key="ColorPrimaryLight">#C5D1E0</Color>
    <Color x:Key="ColorPrimaryLighter">#E2E8F0</Color>
    <Color x:Key="ColorPrimaryDark">#0F1A2E</Color>
    <Color x:Key="ColorSuccess">#2CB67D</Color>
    <Color x:Key="ColorError">#E53E3E</Color>
    <Color x:Key="ColorWarning">#F59E0B</Color>
    <Color x:Key="ColorInfo">#3B82F6</Color>
    <Color x:Key="ColorAccent1">#2391B2</Color>
    <Color x:Key="ColorAccent2">#1166B9</Color>
    <Color x:Key="ColorGray1">#EBEEF2</Color>
    <Color x:Key="ColorGray2">#B8C3C3</Color>
    <Color x:Key="ColorGray3">#6B7280</Color>
    <Color x:Key="ColorGray4">#374151</Color>

    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource ColorPrimary}" />
    <SolidColorBrush x:Key="PrimaryLightBrush" Color="{StaticResource ColorPrimaryLight}" />
    <SolidColorBrush x:Key="PrimaryLighterBrush" Color="{StaticResource ColorPrimaryLighter}" />
    <SolidColorBrush x:Key="PrimaryDarkBrush" Color="{StaticResource ColorPrimaryDark}" />
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource ColorSuccess}" />
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource ColorError}" />
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource ColorWarning}" />
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource ColorInfo}" />
    <SolidColorBrush x:Key="Accent1Brush" Color="{StaticResource ColorAccent1}" />
    <SolidColorBrush x:Key="Accent2Brush" Color="{StaticResource ColorAccent2}" />
    <SolidColorBrush x:Key="Gray1Brush" Color="{StaticResource ColorGray1}" />
    <SolidColorBrush x:Key="Gray2Brush" Color="{StaticResource ColorGray2}" />
    <SolidColorBrush x:Key="Gray3Brush" Color="{StaticResource ColorGray3}" />
    <SolidColorBrush x:Key="Gray4Brush" Color="{StaticResource ColorGray4}" />
    
</ResourceDictionary>
